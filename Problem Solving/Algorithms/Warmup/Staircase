// https://www.hackerrank.com/challenges/staircase
// C++

#include <bits/stdc++.h>

using namespace std;

// Complete the staircase function below.
void staircase(int n) {
   int i = 0, j = 0;

   while (i < n) {
       for (j = 0; j < n - i - 1; j++) {
           cout << " ";
       }

       for (j; j < n; j++) {
           cout<<"#";
       }

       cout<<endl;
       i++;
   }
}
