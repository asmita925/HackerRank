#include <iostream>
#include <string>
using namespace std;

int main() {
   int m = 0, n= 0, i = 0, j = 0;
   string s1, s2;

   cin>>s1>>s2;

   cout<<s1.length()<<" "<<s2.length()<<endl;

   cout<<s1+s2<<endl;

   swap(s1.at(0), s2.at(0));

   cout<<s1<<" "<<s2;
    return 0;
}
